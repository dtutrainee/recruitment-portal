<%- model_class = Candidate -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @candidate.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:technology) %>:</strong></dt>
  <dd><%= array_to_string_html(@candidate.technology) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:source_partner) %>:</strong></dt>
  <dd><%= @candidate.source_partner %></dd>
  <dt><strong><%= model_class.human_attribute_name(:role) %>:</strong></dt>
  <dd><%= @candidate.role %></dd>
  <dt><strong><%= model_class.human_attribute_name(:round) %>:</strong></dt>
  <dd><%= @candidate.round %></dd>
  <dt><strong><%= model_class.human_attribute_name(:date_of_interview) %>:</strong></dt>
  <dd><%= @candidate.date_of_interview %></dd>
  <dt><strong><%= model_class.human_attribute_name(:interviewer) %>:</strong></dt>
  <dd><%= array_to_string_html(@candidate.interviewer) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cv) %>:</strong></dt>
  <dd><%= link_to 'My CV', @candidate.cv.url %>
</dd>
  
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              candidates_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_candidate_path(@candidate), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              candidate_path(@candidate),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
