<%- model_class = Interviewer -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:role) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @interviewers.each do |interviewer| %>
      <tr>
        <td><%= link_to interviewer.id, interviewer_path(interviewer) %></td>
        <td><%= interviewer.name %></td>
        <td><%= interviewer.role %></td>
        <td><%=l interviewer.created_at %></td>
        <td>
                        <%= link_to 'Show', interviewer %>

          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_interviewer_path(interviewer), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      interviewer_path(interviewer),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_interviewer_path,
            :class => 'btn btn-primary' %>
