<%= form_for @candidate, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :technology, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :technology, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :sourcingpartner, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :sourcingpartner, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :role, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :role, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :round, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :round, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :dateofinterview, :class => 'control-label' %>
    <div class="controls">
      <%= f.datetime_select :dateofinterview, :class => 'datetime_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :interviewers, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :interviewers, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :cv_file_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :cv_file_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :cv_content_type, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :cv_content_type, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :cv_file_size, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :cv_file_size, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :cv_updated_at, :class => 'control-label' %>
    <div class="controls">
      <%= f.datetime_select :cv_updated_at, :class => 'datetime_select' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                candidates_path, :class => 'btn' %>
  </div>
<% end %>
