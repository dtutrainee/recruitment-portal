<%- model_class = Candidate -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @candidate.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:technology) %>:</strong></dt>
  <dd><%= @candidate.technology %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sourcingpartner) %>:</strong></dt>
  <dd><%= @candidate.sourcingpartner %></dd>
  <dt><strong><%= model_class.human_attribute_name(:role) %>:</strong></dt>
  <dd><%= @candidate.role %></dd>
  <dt><strong><%= model_class.human_attribute_name(:round) %>:</strong></dt>
  <dd><%= @candidate.round %></dd>
  <dt><strong><%= model_class.human_attribute_name(:dateofinterview) %>:</strong></dt>
  <dd><%= @candidate.dateofinterview %></dd>
  <dt><strong><%= model_class.human_attribute_name(:interviewers) %>:</strong></dt>
  <dd><%= @candidate.interviewers %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cv_file_name) %>:</strong></dt>
  <dd><%= @candidate.cv_file_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cv_content_type) %>:</strong></dt>
  <dd><%= @candidate.cv_content_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cv_file_size) %>:</strong></dt>
  <dd><%= @candidate.cv_file_size %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cv_updated_at) %>:</strong></dt>
  <dd><%= @candidate.cv_updated_at %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              candidates_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_candidate_path(@candidate), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              candidate_path(@candidate),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
