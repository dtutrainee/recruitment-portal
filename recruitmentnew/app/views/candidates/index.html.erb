<%- model_class = Candidate -%>


  



<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>

    <form class="form-search">

    <%= text_field_tag :name, params[:name] %>

    <button type="submit" class="btn">Search</button>
    </form>
<table class="table table-striped">





  <thead>
   
    <tr>

      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:technology) %></th>
      <th><%= model_class.human_attribute_name(:sourcing_partner) %></th>
      <th><%= model_class.human_attribute_name(:role) %></th>
      <th><%= model_class.human_attribute_name(:round) %></th>
      <th><%= model_class.human_attribute_name(:date_of_interview) %></th>
      <th><%= model_class.human_attribute_name(:interviewer) %></th>
      <th><%= model_class.human_attribute_name(:cv) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>

  <tbody>
    <% @candidates.each do |candidate| %>
      <tr>
        <td><%= link_to candidate.id, candidate_path(candidate) %></td>
        <td><%= candidate.name %></td>
        <td><%= array_to_string_html(candidate.technology) %></td>
        <td><%= candidate.source_partner %></td>
        <td><%= candidate.role %></td>
        <td><%= candidate.round %></td>
        <td><%= candidate.date_of_interview %></td>
        <td><%= array_to_string_html(candidate.interviewer) %></td>
        <td><%= link_to 'My CV', candidate.cv.url %></td>
        <td>


              <%= link_to 'Show', candidate %>

          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_candidate_path(candidate), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      candidate_path(candidate),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_candidate_path,
            :class => 'btn btn-primary' %>


